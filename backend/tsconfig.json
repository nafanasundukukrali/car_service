{
  "compileOnSave": false,
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2017",
    "noEmit": true,
    "outDir": "./build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node"], 
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src*"],
      "@logger/*" : ["src/utils/logger/*"],
      "@asinterfaces/*": ["src/interfaces/*"],
      "@astypes/*" : ["src/types/*"],
      "@blrealization/*" : ["src/bl/realization/*"],
      "@blerrors/*" : ["src/bl/errors/*"],
      "@da/*" : ["src/da/*"]
    },
  },
  "exclude": ["node_modulea"],
  "include": [
    "src",
    "**/*.ts"
  ]
  
}
